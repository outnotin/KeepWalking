<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:textStyle="bold"
        android:layout_marginTop="2dp"
        tools:text="Keep Walking Title"
        android:id="@+id/list_item_keep_walking_title_text_view"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="10dp"
        android:id="@+id/list_item_keep_walking_date_text_view"
        android:textSize="16dp"
        tools:text="Keep Walking Date"
        android:layout_below="@id/list_item_keep_walking_title_text_view"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@id/list_item_keep_walking_date_text_view"
        android:layout_marginBottom="10dp"/>



</RelativeLayout>
